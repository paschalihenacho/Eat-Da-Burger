<div class="row text-center">

    <div class="col-5">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li id="uneaten">"{{burger_name}}"
                <p>🍔</p>
                <button data-id="{{id}}" class="eat">devour</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-2">
    </div>

    <div class="col-5">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>{{burger_name}} 💯 <img src="/assets/images/x.png" width="20px" height="20px" data-id="{{id}}"
                    class="x">
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>

</div>

<div class="row text-center">

    <div class="col">
    </div>

    <div id="make" class="col">
        <label id="make-label">Make a burger</label>
        <form action="/" method="POST">
            <input type="text" name="burger" placeholder="burger name">
            <input type="submit" value="Make" id="submit-burger">
        </form>
    </div>

    <div class="col">
    </div>
</div>